# Frontend Environment Variables
# Copy this file to .env or set these in your deployment dashboard (Vercel/Netlify).

# WebSocket URL for audio streaming (Backend)
# For local dev: ws://localhost:8080/api/audio/stream
# For production: wss://your-backend-app.railway.app/api/audio/stream
VITE_WS_URL=ws://localhost:8080/api/audio/stream

# SSE URL for transcription streaming (Backend)
# For local dev: http://localhost:8080/api/transcription/stream
# For production: https://your-backend-app.railway.app/api/transcription/stream
VITE_SSE_URL=http://localhost:8080/api/transcription/stream

# Optional: Server endpoint for logging/metrics
VITE_SERVER_ENDPOINT=
